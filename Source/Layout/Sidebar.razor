<MudDrawer @bind-Open="@IsOpen" Elevation="2" Variant="@DrawerVariant.Temporary">
    <MudNavMenu Style="margin-top: 20px;">
        <MudNavLink Href="/pedidos" 
                    Icon="@Icons.Material.Outlined.ReceiptLong" 
                    IconColor="Color.Inherit">
            Pedidos
        </MudNavLink>
        <MudNavLink Href="/pagamentos" 
                    Icon="@Icons.Material.Outlined.Payment" 
                    IconColor="Color.Inherit">
            Pagamentos
        </MudNavLink>
        <MudNavLink Href="/produtos" 
                    Icon="@Icons.Material.Outlined.Inventory2" 
                    IconColor="Color.Inherit">
            Produtos
        </MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback<bool> IsOpenChanged { get; set; }
}

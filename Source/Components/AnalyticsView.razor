<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudGrid Spacing="3">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="0" Class="pa-4"
                Style="height: 100%; border-radius: 12px; border-left: 4px solid var(--mud-palette-success);">
                <div class="d-flex align-center mb-3">
                    <MudAvatar Color="Color.Success" Variant="Variant.Filled" Size="Size.Large"
                        Style="background: rgba(var(--mud-palette-success-rgb), 0.1);">
                        <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Success" Size="Size.Medium" />
                    </MudAvatar>
                </div>
                <MudText Typo="Typo.body2"
                    Style="opacity: 0.7; text-transform: uppercase; font-weight: 600; font-size: 0.75rem; letter-spacing: 0.5px;">
                    Vendas Hoje
                </MudText>
                <MudText Typo="Typo.h4" Class="mt-2" Style="font-weight: 800; font-size: 2rem;">
                    R$ 2.847,50
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="0" Class="pa-4"
                Style="height: 100%; border-radius: 12px; border-left: 4px solid var(--mud-palette-primary);">
                <div class="d-flex align-center mb-3">
                    <MudAvatar Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large"
                        Style="background: rgba(var(--mud-palette-primary-rgb), 0.1);">
                        <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Primary" Size="Size.Medium" />
                    </MudAvatar>
                </div>
                <MudText Typo="Typo.body2"
                    Style="opacity: 0.7; text-transform: uppercase; font-weight: 600; font-size: 0.75rem; letter-spacing: 0.5px;">
                    Pedidos Hoje
                </MudText>
                <MudText Typo="Typo.h4" Class="mt-2" Style="font-weight: 800; font-size: 2rem;">
                    42
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="0" Class="pa-4"
                Style="height: 100%; border-radius: 12px; border-left: 4px solid var(--mud-palette-warning);">
                <div class="d-flex align-center mb-3">
                    <MudAvatar Color="Color.Warning" Variant="Variant.Filled" Size="Size.Large"
                        Style="background: rgba(var(--mud-palette-warning-rgb), 0.1);">
                        <MudIcon Icon="@Icons.Material.Filled.PendingActions" Color="Color.Warning"
                            Size="Size.Medium" />
                    </MudAvatar>
                </div>
                <MudText Typo="Typo.body2"
                    Style="opacity: 0.7; text-transform: uppercase; font-weight: 600; font-size: 0.75rem; letter-spacing: 0.5px;">
                    Pendentes
                </MudText>
                <MudText Typo="Typo.h4" Class="mt-2" Style="font-weight: 800; font-size: 2rem;">
                    7
                </MudText>
                <div class="d-flex align-center mt-2">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" Size="Size.Small" Color="Color.Warning" />
                    <MudText Typo="Typo.caption" Color="Color.Warning" Style="margin-left: 4px; font-weight: 600;">
                        Aguardando
                    </MudText>
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="0" Class="pa-4"
                Style="height: 100%; border-radius: 12px; border-left: 4px solid var(--mud-palette-info);">
                <div class="d-flex align-center mb-3">
                    <MudAvatar Color="Color.Info" Variant="Variant.Filled" Size="Size.Large"
                        Style="background: rgba(var(--mud-palette-info-rgb), 0.1);">
                        <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Color="Color.Info" Size="Size.Medium" />
                    </MudAvatar>
                </div>
                <MudText Typo="Typo.body2"
                    Style="opacity: 0.7; text-transform: uppercase; font-weight: 600; font-size: 0.75rem; letter-spacing: 0.5px;">
                    Ticket Médio
                </MudText>
                <MudText Typo="Typo.h4" Class="mt-2" Style="font-weight: 800; font-size: 2rem;">
                    R$ 67,80
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudPaper Elevation="0" Class="pa-6 mt-5" Style="border-radius: 12px;">
        <div class="d-flex justify-space-between align-center mb-4">
            <div>
                <MudText Typo="Typo.h5" Style="font-weight: 700;">
                    Resumo dos Últimos 7 Dias
                </MudText>
                <MudText Typo="Typo.body2" Style="opacity: 0.6; margin-top: 4px;">
                    Atualizado @DateTime.Now.ToString("HH:mm")
                </MudText>
            </div>
            <MudButton Variant="Variant.Text" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Refresh"
                Size="Size.Small" Style="border-radius: 8px;">
                Atualizar
            </MudButton>
        </div>

        <MudGrid Spacing="4">
            <MudItem xs="12" sm="6" md="3">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Receipt" Color="Color.Primary" Size="Size.Large"
                        Class="mr-3" />
                    <div>
                        <MudText Typo="Typo.caption"
                            Style="opacity: 0.6; text-transform: uppercase; font-size: 0.7rem; font-weight: 600;">
                            Total Pedidos
                        </MudText>
                        <MudText Typo="Typo.h5" Style="font-weight: 800; margin-top: 4px;">
                            287
                        </MudText>
                    </div>
                </div>
            </MudItem>

            <MudItem xs="12" sm="6" md="3">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Paid" Color="Color.Success" Size="Size.Large" Class="mr-3" />
                    <div>
                        <MudText Typo="Typo.caption"
                            Style="opacity: 0.6; text-transform: uppercase; font-size: 0.7rem; font-weight: 600;">
                            Receita Total
                        </MudText>
                        <MudText Typo="Typo.h5" Style="font-weight: 800; margin-top: 4px;">
                            R$ 19.458,90
                        </MudText>
                    </div>
                </div>
            </MudItem>

            <MudItem xs="12" sm="6" md="3">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.CalendarToday" Color="Color.Info" Size="Size.Large"
                        Class="mr-3" />
                    <div>
                        <MudText Typo="Typo.caption"
                            Style="opacity: 0.6; text-transform: uppercase; font-size: 0.7rem; font-weight: 600;">
                            Média Diária
                        </MudText>
                        <MudText Typo="Typo.h5" Style="font-weight: 800; margin-top: 4px;">
                            R$ 2.779,84
                        </MudText>
                    </div>
                </div>
            </MudItem>

            <MudItem xs="12" sm="6" md="3">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.ShowChart" Color="Color.Success" Size="Size.Large"
                        Class="mr-3" />
                    <div>
                        <MudText Typo="Typo.caption"
                            Style="opacity: 0.6; text-transform: uppercase; font-size: 0.7rem; font-weight: 600;">
                            Crescimento
                        </MudText>
                        <MudText Typo="Typo.h5" Color="Color.Success" Style="font-weight: 800; margin-top: 4px;">
                            +15.8%
                        </MudText>
                    </div>
                </div>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>